<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoadsApp2.MainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  />
            <ColumnDefinition  />
        </Grid.ColumnDefinitions>

        <Frame BackgroundColor="Grey"
               Grid.Column="0"
               Grid.Row="2"
               Grid.ColumnSpan="2">
            <ScrollView Orientation="Horizontal">
                <HorizontalStackLayout>
                    <Frame BackgroundColor="Transparent" BorderColor="Transparent">
                        <Image Source="car3.png" WidthRequest="150"  >
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="CarImage_Tapped"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Frame>
                </HorizontalStackLayout>
            </ScrollView>
        </Frame>
        
        <Button Text="Очистить"
                Clicked="ButtonClean_Clicked"
                ZIndex="99"
                Grid.Column="0"
                Grid.Row="0"
                WidthRequest="100" />

        <HorizontalStackLayout  Grid.Column="2"
                Grid.Row="0">
            <VerticalStackLayout>
                <Switch x:Name="switchIsCrossroad"
                    IsToggled="True" />

                <Label Text="Перекресток" />
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Switch x:Name="switchIsTrajectoryMode"
                    IsToggled="False"
                        Toggled="switchIsTrajectoryMode_Toggled"/>

                <Label Text="Режим траектории" />
            </VerticalStackLayout>

        </HorizontalStackLayout>

        <AbsoluteLayout BackgroundColor="White"
                    x:Name="absoluteLayout"
                    ZIndex="99"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Grid.Row="1" >
            <AbsoluteLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="AbsoluteLayout_Tapped"/>
            </AbsoluteLayout.GestureRecognizers>
        </AbsoluteLayout>

    </Grid>
</ContentPage>
