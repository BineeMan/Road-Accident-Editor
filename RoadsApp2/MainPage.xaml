<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoadsApp2.MainPage">
    <Grid x:Name="GridMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Frame BackgroundColor="Grey"
               Grid.Column="0"
               Grid.Row="2"
               Grid.ColumnSpan="2">
            <ScrollView Orientation="Horizontal" HeightRequest="120">
                <HorizontalStackLayout>
                    <Frame BackgroundColor="Transparent"
                           BorderColor="Transparent" 
                           WidthRequest="180" >
                        <Image Source="car3.png"
                               WidthRequest="150"
                               HeightRequest="80" >
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="RoadObjectFromMenu_Tapped"/>
                            </Image.GestureRecognizers>

                        </Image>
                    </Frame>
                </HorizontalStackLayout>
            </ScrollView>
        </Frame>

        <ScrollView Orientation="Horizontal"  Grid.Row="0" Grid.ColumnSpan="3">
            <HorizontalStackLayout Grid.Column="0"
                Grid.Row="0" Grid.ColumnSpan="3" >

                <Button Text="Очистить"
                Clicked="ButtonClean_Clicked"
                ZIndex="99"
                Grid.Column="0"
                Grid.Row="0"
                WidthRequest="100"
                HeightRequest="60"
                Margin="10" />

                <HorizontalStackLayout Spacing="1">
                    <Image Source="crossroadsicon.png"
                       WidthRequest="50"
                       HeightRequest="50" />
                    <Switch x:Name="switchIsCrossroad"
                       IsToggled="True" 
                       Margin="0, 0, 0 ,0" />
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <Image Source="trajectoryicon.png"
                       WidthRequest="40"
                       HeightRequest="40" />
                    <Switch x:Name="switchIsTrajectoryMode"
                        IsToggled="False"
                        Toggled="SwitchIsTrajectoryMode_Toggled"
                        Margin="0, 0, 0 ,0" />

                </HorizontalStackLayout>
                <ImageButton x:Name="crossButton"
                             Source="crossicon.png"
                             Clicked="CrossButton_Clicked"
                             WidthRequest="40"
                             HeightRequest="40" />
            </HorizontalStackLayout>
        </ScrollView>

        <AbsoluteLayout BackgroundColor="White"
                        x:Name="absoluteLayout"
                        ZIndex="99"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="1" >

            <AbsoluteLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="AbsoluteLayout_Tapped"/>
            </AbsoluteLayout.GestureRecognizers>
        </AbsoluteLayout>

    </Grid>
</ContentPage>
